<Window x:Class="Wisdom.WPF_Pure.Systems.SystemSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wisdom.WPF_Pure.Systems"
        mc:Ignorable="d"
        Title="设置" Height="450" Width="800">
    <Grid ShowGridLines="True">

        <Label Content="启动项设置" HorizontalAlignment="Left" Margin="24,25,0,0" VerticalAlignment="Top" Height="33" Width="66"/>
        <CheckBox x:Name="checkBox" Content="开机时启动软件" IsChecked="{Binding Data[0].IsAutoStart}"  Margin="69,95,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel  Height="59" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,150,30" HorizontalAlignment="Right">
            <Button Content="确认"   Margin="10,10,2,10" Padding="3" Width="80" Background="#FFD8B7B7" Click="Button_Ok_Click"/>
            <Button Content="取消"   Margin="10,10,9,10" Padding="3" Width="80"/>
        </StackPanel>
        
    </Grid>
</Window>
